	<!-- ******************************************************************************************** -->
	<!-- SURFACE MAPPINGS -->
	<!-- ******************************************************************************************** -->

	<Mappings>

        <!-- ******************************************************************************************** -->
        <!-- MIXER MAPPING -->
        <!-- ******************************************************************************************** -->
	
		<DeviceMapping device="MixerConsole">
			<Bank target="RemoteBank" pagesize="24">
				<!-- The Channel Strips -->
				<foreach variable="$channel" count="24">
					<Strip> 
						<String control="channelDisplay[$channel]" param="label"/> <!-- virtual channel label -->
						<Value control="fader[$channel]" param="volume"/>
						<Value control="button[$channel]" param="mute"/>
					</Strip>
				</foreach>
			</Bank>
		</DeviceMapping>
	
	
		<!-- ******************************************************************************************** -->
        <!-- TRANSPORT MAPPING -->
        <!-- ******************************************************************************************** -->

		<DeviceMapping device="TransportPanel">

			<Command control="playButton"			command.category="Transport" command.name="Play from Loop Start"/>
			<Command control="deferedPlayButton"	        command.category="Transport" command.name="Toggle Loop"/>
			<Command control="stopButton"			command.category="Transport" command.name="Stop"/>
			<Command control="recordButton"			command.category="Transport" command.name="Record"/>
			<Command control="rewindButton"			command.category="Transport" command.name="Rewind Bar"/>
			<Command control="ffButton"		        command.category="Transport" command.name="Forward Bar"/>

		</DeviceMapping>
		
